<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.evote.app.votingmanagement.ui.controller.VotingFxController">

    <!-- OBERER BEREICH: Voting anlegen -->
    <top>
        <VBox spacing="10.0">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Neues Voting anlegen" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

            <GridPane hgap="8.0" vgap="8.0">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <!-- ID -->
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="idField"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           promptText="z.B. 1"/>

                <!-- Name -->
                <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           promptText="Titel der Abstimmung"/>

                <!-- Info -->
                <Label text="Beschreibung:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextArea fx:id="infoArea"
                          GridPane.rowIndex="2" GridPane.columnIndex="1"
                          prefRowCount="3"
                          wrapText="true"/>

                <!-- Startdatum -->
                <Label text="Startdatum:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="startDatePicker"
                            GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- Enddatum -->
                <Label text="Enddatum:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="endDatePicker"
                            GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <!-- Optionen -->
                <Label text="Optionen (kommagetrennt):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="optionsField"
                           GridPane.rowIndex="5" GridPane.columnIndex="1"
                           promptText="Ja, Nein, Enthaltung"/>
            </GridPane>

            <HBox spacing="8.0">
                <Button text="Voting anlegen" onAction="#onCreateVoting"/>
                <Button text="Formular leeren" onAction="#onClearForm"/>
            </HBox>

            <Label fx:id="statusLabel"/>
        </VBox>
    </top>

    <!-- UNTERER BEREICH: Listen der Votings -->
    <center>
        <HBox spacing="10.0">
            <padding>
                <Insets top="0" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Nicht offene Votings -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label text="Nicht offene Votings" style="-fx-font-weight: bold;"/>
                <ListView fx:id="notOpenVotingsList" prefHeight="200.0"/>

                <HBox spacing="8.0">
                    <Button text="Ausgewähltes Voting laden" onAction="#onLoadSelectedVoting"/>
                    <Button text="Ausgewähltes Voting öffnen" onAction="#onOpenSelectedVoting"/>
                </HBox>
            </VBox>

            <!-- Offene Votings -->
            <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                <Label text="Offene Votings" style="-fx-font-weight: bold;"/>
                <ListView fx:id="openVotingsList" prefHeight="200.0"/>

                <Button text="Listen aktualisieren" onAction="#onRefreshVotingLists"/>
            </VBox>
        </HBox>
    </center>

</BorderPane>
